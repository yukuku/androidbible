<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:ignore="HardcodedText" >

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/bDigit1"
            style="@style/KeypadButtonStyle"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text="1"
            android:textSize="36dp" />

        <Button
            android:id="@+id/bDigit2"
            style="@style/KeypadButtonStyle"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text="2"
            android:textSize="36dp" />

        <Button
            android:id="@+id/bDigit3"
            style="@style/KeypadButtonStyle"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text="3"
            android:textSize="36dp" />

        <Button
            android:id="@+id/bDigit4"
            style="@style/KeypadButtonStyle"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text="4"
            android:textSize="36dp" />

        <Button
            android:id="@+id/bDigit5"
            style="@style/KeypadButtonStyle"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text="5"
            android:textSize="36dp" />

        <Button
            android:id="@+id/bDigitC"
            style="@style/KeypadButtonStyle"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text="C"
            android:textSize="36dp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/bDigit6"
            style="@style/KeypadButtonStyle"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text="6"
            android:textSize="36dp" />

        <Button
            android:id="@+id/bDigit7"
            style="@style/KeypadButtonStyle"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text="7"
            android:textSize="36dp" />

        <Button
            android:id="@+id/bDigit8"
            style="@style/KeypadButtonStyle"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text="8"
            android:textSize="36dp" />

        <Button
            android:id="@+id/bDigit9"
            style="@style/KeypadButtonStyle"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text="9"
            android:textSize="36dp" />

        <Button
            android:id="@+id/bDigit0"
            style="@style/KeypadButtonStyle"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text="0"
            android:textSize="36dp" />

        <Button
            android:id="@+id/bDigitSwitch"
            style="@style/KeypadButtonStyle"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text=":"
            android:textSize="36dp"
            android:textStyle="bold" />
    </TableRow>

</TableLayout>