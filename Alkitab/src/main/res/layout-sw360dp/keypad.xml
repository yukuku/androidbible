<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/keypad_bg"
    tools:context=".base.ac.GotoActivity"
    tools:ignore="HardcodedText" >

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/bDigit1"
            android:background="?selectableItemBackgroundBorderless"
            android:textColor="@color/keypad_text_color"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:text="1"
            android:textSize="24sp"
            android:fontFamily="sans-serif-regular"/>

        <Button
            android:id="@+id/bDigit2"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:text="2"
            android:background="?selectableItemBackgroundBorderless"
            android:textColor="@color/keypad_text_color"
            android:textSize="24sp"
            android:fontFamily="sans-serif-regular"/>

        <Button
            android:id="@+id/bDigit3"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:text="3"
            android:background="?selectableItemBackgroundBorderless"
            android:textColor="@color/keypad_text_color"
            android:textSize="24sp"
            android:fontFamily="sans-serif-regular"/>
    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/bDigit4"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:text="4"
            android:background="?selectableItemBackgroundBorderless"
            android:textColor="@color/keypad_text_color"
            android:textSize="24sp"
            android:fontFamily="sans-serif-regular"/>

        <Button
            android:id="@+id/bDigit5"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:text="5"
            android:background="?selectableItemBackgroundBorderless"
            android:textColor="@color/keypad_text_color"
            android:textSize="24sp"
            android:fontFamily="sans-serif-regular"/>

        <Button
            android:id="@+id/bDigit6"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:text="6"
            android:background="?selectableItemBackgroundBorderless"
            android:textColor="@color/keypad_text_color"
            android:textSize="24sp"
            android:fontFamily="sans-serif-regular"/>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/bDigit7"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:text="7"
            android:background="?selectableItemBackgroundBorderless"
            android:textColor="@color/keypad_text_color"
            android:textSize="24sp"
            android:fontFamily="sans-serif-regular"/>

        <Button
            android:id="@+id/bDigit8"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:text="8"
            android:background="?selectableItemBackgroundBorderless"
            android:textColor="@color/keypad_text_color"
            android:textSize="24sp"
            android:fontFamily="sans-serif-regular"/>

        <Button
            android:id="@+id/bDigit9"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:text="9"
            android:background="?selectableItemBackgroundBorderless"
            android:textColor="@color/keypad_text_color"
            android:textSize="24sp"
            android:fontFamily="sans-serif-regular"/>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/bDigitC"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:text="C"
            android:background="?selectableItemBackgroundBorderless"
            android:textColor="@color/keypad_text_color"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-regular"/>

        <Button
            android:id="@+id/bDigit0"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:text="0"
            android:background="?selectableItemBackgroundBorderless"
            android:textColor="@color/keypad_text_color"
            android:textSize="24sp"
            android:fontFamily="sans-serif-regular"/>

        <Button
            android:id="@+id/bDigitSwitch"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:text=":"
            android:background="?selectableItemBackgroundBorderless"
            android:textColor="@color/keypad_text_color"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-regular"/>
    </TableRow>

</TableLayout>