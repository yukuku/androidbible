<?xml version="1.0" encoding="utf-8" ?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="yuku.alkitab" android:installLocation="auto" android:versionCode="128" android:versionName="4.0.1" xmlns:tools="http://schemas.android.com/tools">
	<uses-sdk android:minSdkVersion="7" android:targetSdkVersion="17" />

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />
	<uses-permission android:name="android.permission.NFC" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_SYNC_STATS" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />

    <uses-feature android:name="android.hardware.touchscreen" android:required="false" />
	<uses-feature android:name="android.hardware.nfc" android:required="false" />
	
	<application android:name="yuku.alkitab.base.App" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:hardwareAccelerated="true" android:theme="@style/Theme.Sherlock.Light.DarkActionBar" android:allowBackup="true">
		<activity android:name="yuku.alkitab.base.IsiActivity" android:configChanges="keyboardHidden|orientation|screenSize|locale|layoutDirection" android:theme="@style/Theme.Alkitab.Content">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="application/vnd.yuku.alkitab.nfc.beam" />
            </intent-filter>
            <intent-filter>
                <action android:name="yuku.alkitab.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter android:label="@string/intent_filter_import_from_backup">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="file" />
                <data android:scheme="content" />
                <data android:mimeType="text/xml" />
                <data android:host="*" />
            </intent-filter>
            <intent-filter android:label="@string/intent_filter_import_from_backup">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="file" />
                <data android:scheme="content" />
                <data android:mimeType="*/*" />
                <data android:host="*" />
                <data android:pathPattern=".*\\.xml" />
                <data android:pathPattern=".*\\..*\\.xml" />
                <data android:pathPattern=".*\\..*\\..*\\.xml" />
                <data android:pathPattern=".*\\..*\\..*\\..*\\.xml" />
                <data android:pathPattern=".*\\..*\\..*\\..*\\..*\\.xml" />
                <data android:pathPattern=".*\\..*\\..*\\..*\\..*\\..*\\.xml" />
            </intent-filter>
        </activity>

		<activity android:name="yuku.alkitab.base.ac.GotoActivity" android:label="@string/tuju_v" android:configChanges="locale|layoutDirection" android:windowSoftInputMode="adjustNothing" />
		<activity android:name="yuku.alkitab.base.ac.SettingsActivity" android:label="@string/pengaturan_alkitab" android:configChanges="keyboardHidden|orientation|screenSize|locale|layoutDirection" />
		<activity android:name="yuku.alkitab.base.ac.ColorSettingsActivity" android:label="@string/color_settings" android:configChanges="keyboardHidden|orientation|screenSize|locale|layoutDirection" />

		<activity android:name="yuku.alkitab.base.ac.BookmarkListActivity" android:label="@string/pembatas_buku" android:configChanges="keyboardHidden|orientation|screenSize|locale|layoutDirection" android:windowSoftInputMode="adjustResize|stateHidden" />
		<activity android:name="yuku.alkitab.base.ac.VersionsActivity" android:label="@string/kelola_versi" android:configChanges="keyboardHidden|orientation|screenSize|locale|layoutDirection">
		    <intent-filter android:label="@string/intent_filter_open_yes_file">
		        <action android:name="android.intent.action.VIEW" />
		        <category android:name="android.intent.category.DEFAULT" />
		        <category android:name="android.intent.category.BROWSABLE" />
		        <data android:scheme="file" />
		        <data android:scheme="content" />
		        <data android:mimeType="*/*" />
		        <data android:host="*" />
		        <data android:pathPattern=".*\\.yes" />
		        <data android:pathPattern=".*\\..*\\.yes" />
		        <data android:pathPattern=".*\\..*\\..*\\.yes" />
		        <data android:pathPattern=".*\\..*\\..*\\..*\\.yes" />
		        <data android:pathPattern=".*\\..*\\..*\\..*\\..*\\.yes" />
		        <data android:pathPattern=".*\\..*\\..*\\..*\\..*\\..*\\.yes" />
		    </intent-filter>
		    <intent-filter android:label="@string/intent_filter_open_pdb_file">
		        <action android:name="android.intent.action.VIEW" />
		        <category android:name="android.intent.category.DEFAULT" />
		        <category android:name="android.intent.category.BROWSABLE" />
		        <data android:scheme="file" />
		        <data android:scheme="content" />
		        <data android:mimeType="*/*" />
		        <data android:host="*" />
		        <data android:pathPattern=".*\\.pdb" />
		        <data android:pathPattern=".*\\..*\\.pdb" />
		        <data android:pathPattern=".*\\..*\\..*\\.pdb" />
		        <data android:pathPattern=".*\\..*\\..*\\..*\\.pdb" />
		        <data android:pathPattern=".*\\..*\\..*\\..*\\..*\\.pdb" />
		        <data android:pathPattern=".*\\..*\\..*\\..*\\..*\\..*\\.pdb" />
		    </intent-filter>
		    <intent-filter android:label="@string/intent_filter_open_pdb_or_yes_file">
		        <action android:name="android.intent.action.VIEW" />
		        <category android:name="android.intent.category.DEFAULT" />
		        <category android:name="android.intent.category.BROWSABLE" />
		        <data android:scheme="file" />
		        <data android:scheme="content" />
		        <data android:mimeType="application/octet-stream" />
		        <data android:host="*" />
		    </intent-filter>
		</activity>
		
		<activity android:name="yuku.alkitab.base.ac.Search2Activity" android:label="@string/cari_v" android:configChanges="keyboardHidden|orientation|screenSize|locale|layoutDirection" android:theme="@style/Theme.Alkitab.NoActionBar" />
		<activity android:name="yuku.alkitab.base.ac.HelpActivity" android:label="@string/bantuan_judul" android:configChanges="keyboardHidden|orientation|screenSize|locale|layoutDirection" />
		<activity android:name="yuku.alkitab.base.ac.AboutActivity" android:configChanges="keyboardHidden|orientation|screenSize|locale|layoutDirection" />
		<activity android:name="yuku.alkitab.base.ac.ShareActivity" android:configChanges="keyboardHidden|orientation|screenSize|locale|layoutDirection" />
		<activity android:name="yuku.alkitab.base.ac.FontManagerActivity" android:configChanges="keyboardHidden|orientation|screenSize|locale|layoutDirection" />
		<activity android:name="yuku.alkitab.base.ac.SongListActivity" android:configChanges="keyboardHidden|orientation|screenSize|locale|layoutDirection" android:windowSoftInputMode="adjustResize|stateHidden" />
		<activity android:name="yuku.alkitab.base.ac.SecretSettingsActivity" android:label="Secret settings" android:configChanges="keyboardHidden|orientation|screenSize|locale|layoutDirection" />
		<activity android:name="yuku.filechooser.FileChooserActivity" android:configChanges="keyboardHidden|orientation|screenSize|locale|layoutDirection" />
		<activity android:name="com.example.android.wizardpager.MainActivity" android:configChanges="keyboardHidden|orientation|screenSize|locale|layoutDirection" android:theme="@style/AlkitabFeedback.Theme" />

        <!-- Account chooser compat -->
        <activity android:name="yuku.androidsdk.accountchooser.ChooseTypeAndAccountActivity"
                  android:excludeFromRecents="true"
                  android:exported="true"
                  android:theme="@style/Theme.AccountChooserCompat"
                  android:label="@string/choose_account_label" />

        <activity android:name="yuku.androidsdk.accountchooser.ChooseAccountTypeActivity"
                  android:excludeFromRecents="true"
                  android:theme="@style/Theme.AccountChooserCompat"
                  android:label="@string/choose_account_label" />

        <!-- For sync adapter and its friends -->
        <provider android:name="yuku.alkitab.base.syncadapter.SyncProvider"
                  android:authorities="yuku.alkitab.syncadapter.provider"
                  android:enabled="true" />

        <service android:name="yuku.alkitab.base.syncadapter.SyncService" android:exported="true">
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>
            <meta-data android:name="android.content.SyncAdapter"
                       android:resource="@xml/syncadapter" />
        </service>

        <service android:name="yuku.alkitab.base.sv.DownloadService" />
		
		<provider android:name="yuku.alkitab.base.cp.Provider" android:authorities="yuku.alkitab.provider" android:exported="true" tools:ignore="ExportedContentProvider" />
		
		<receiver android:name="yuku.alkitab.base.br.SecretSettingsReceiver" tools:ignore="ExportedReceiver">
			<intent-filter>
				<action android:name="android.provider.Telephony.SECRET_CODE" />
				<data android:scheme="android_secret_code" android:host="2554822" />
			</intent-filter>
		</receiver>
		
        <!-- Used for install referral measurement -->
        <service android:name="com.google.analytics.tracking.android.CampaignTrackingService" />

        <receiver android:name="com.google.analytics.tracking.android.CampaignTrackingReceiver" android:exported="true" tools:ignore="ExportedReceiver">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
